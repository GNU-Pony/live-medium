umask 022

PATH="$HOME/.local/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin"
export PATH

EDITOR="/usr/bin/nano"
export EDITOR

unset TERMCAP
unset MANPATH

if test -d /etc/profile.d/; then
	for profile in /etc/profile.d/*.sh; do
		test -r "$profile" && . "$profile"
	done
	unset profile
fi

if test "$PS1" &&
   test "$BASH" &&
   test -r /etc/bash.bashrc; then
	. /etc/bash.bashrc
fi

