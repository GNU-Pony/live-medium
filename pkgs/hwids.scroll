from dragonsuite import *
import os

pkgname = 'hwids'
pkgver = '20130228'
pkgdesc = 'Hardware identification databases'
upstream = 'https://github.com/gentoo/hwids'
arch = ['x86_64']
freedom = SOFTWARE | MEDIA
license = ['GPL2']
private = UNSUPPORTED
source = [('https://github.com/gentoo/hwids/tarball/hwids-%s' % pkgver, 'hwids-%s.tar.gz' % pkgver)]
sha3sums = [None]


def package(startdir, srcdir, pkgdir, private):
    paths = path('%s/gentoo-hwids-*' % path_escape(srcdir))
    cd('\0'.join(paths))
    for ids in ['pci.ids', 'usb.ids']:
        install(ids, pkgdir + '/usr/share/hwdata/' + ids, mode = 0o644)

