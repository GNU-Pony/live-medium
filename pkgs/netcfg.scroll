from dragonsuite import *

pkgname = 'netcfg'
pkgver = '3.0'
pkgdesc = 'Network configuration and profile scripts'
upstream = 'http://archlinux.org/netcfg/'
arch = ['x86_64']
freedom = SOFTWARE | MEDIA
license = ['BSD']
private = UNSUPPORTED
source = ['ftp://ftp.archlinux.org/other/netcfg/netcfg-%s.tar.xz' % pkgver]
sha3sums = [None]


def package(startdir, srcdir, pkgdir, private):
    cd('%s/%s-%s' % (srcdir, pkgname, pkgver))
    make('DESTDIR=' + pkgdir, 'install')
    install('LICENSE', pkgdir + '/usr/share/licenses/netcfg/LICENSE', mode = 0o644, parents = True)
    install('contrib/bash-completion', pkgdir + '/usr/share/bash-completion/completions/netcfg', mode = 0o644, parents = True)
    install('contrib/zsh-completion', pkgdir + '/usr/share/zsh/site-functions/_netcfg', mode = 0o644, parents = True)
    ln('netcfg.service', pkgdir + '/usr/lib/systemd/system/net-profiles.service')

